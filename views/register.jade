extends layout

block content
    div.row
        div.background
            div.cover
    div.row
        div.home
            div.col-md-4.col-md-offset-4
                div.register
                    form(method='POST',action='/register')
                        if locals.message
                            div.alert.alert-danger(role='alert') !{message}
                        div.row
                            div.col-md-12
                                div.form-group
                                    label First Name
                                    input.form-control(type='text', name='f_name', placeholder='', required)
                                div.form-group
                                    label Last Name
                                    input.form-control(type='text', name='l_name', placeholder='', required)
                                div.form-group
                                    label Email
                                    input.form-control(type='email', name='email', placeholder='', required)
                                div.form-group
                                    label Password
                                    input.form-control(type='password', name='password', placeholder='', required)
                                div.form-group
                                    button.btn.btn-success(type='submit') Register